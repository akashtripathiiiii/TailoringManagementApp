<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            layout="@layout/fragment_upper_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/halfSleeveLen"
            style="@style/text_view_login_signup"
            android:text="@string/enter_half_sleeve_length"
            />

        <EditText
            android:id="@+id/inputFrontWidth"
            style="@style/edit_text_login_signup"
            android:autofillHints="Half Sleeve Length"
            android:ems="10"
            android:hint="@string/half_sleeve_length"
            android:inputType="numberDecimal"
            />

        <TextView
            android:id="@+id/halfSleeveWidth"
            style="@style/text_view_login_signup"
            android:text="@string/enter_half_sleeve_width"
            />

        <EditText
            android:id="@+id/inputHalfSleeveWidth"
            style="@style/edit_text_login_signup"
            android:autofillHints="Half Sleeve Width"
            android:ems="10"
            android:hint="@string/half_sleeve_width"
            android:inputType="numberDecimal"
            />


    </LinearLayout>
</ScrollView>